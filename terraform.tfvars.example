# Copy this file to terraform.tfvars and update with your values
# terraform.tfvars is gitignored for security

project_id = "vibe-trade-475704"
region     = "us-central1"

# Firestore location (multi-region: nam5, eur3, asia1)
# Or single regions: us-central1, us-east1, us-west1, europe-west1, asia-northeast1
firestore_location = "nam5"

# Static authentication token for MCP server
# Generate a secure random token: openssl rand -hex 32
# If empty, authentication is disabled (not recommended for production)
mcp_auth_token = ""

# API configuration
# Note: API still uses NextAuth for JWT validation (needs to be migrated to Firebase)
# NextAuth JWT secret (must match API's NEXTAUTH_SECRET if API still uses it)
# Generate a secure random secret: openssl rand -base64 32
nextauth_secret = ""

# SnapTrade configuration (for UI)
snaptrade_client_id   = ""
snaptrade_consumer_key = ""

# Firebase configuration (for UI)
# NOTE: These are BUILD-TIME variables (NEXT_PUBLIC_*) that get baked into the JavaScript bundle
# They're stored here for convenience, but are passed as Docker build args, not runtime env vars
# Get values from Firebase Console → Project Settings → General → Your apps

# Required for Firebase Auth
firebase_api_key     = "your-api-key"
firebase_auth_domain = "your-project.firebaseapp.com"
firebase_project_id  = "your-project-id"

# Optional (auto-generated by Firebase, but recommended)
firebase_storage_bucket      = "your-project.appspot.com"  # Only if using Storage
firebase_messaging_sender_id = "your-sender-id"            # Only if using FCM
firebase_app_id              = "your-app-id"               # Auto-generated

# Firebase Admin SDK (optional - uses Application Default Credentials on Cloud Run if not set)
# Only needed if you want explicit service account credentials
# firebase_service_account_key = ""

# Agent configuration
openai_api_key   = "sk-..."
langsmith_api_key = "lsv2_..."
openai_model     = "gpt-4o-mini"
max_tokens       = "2000"
max_iterations   = "15"

